<section>
  <h2> <%= @book.title %> </h2>
  <h4> <%= @book.author %> </h4>
  <p> <%= @book.description %> </p>
   <% if session[:user_id] %>
    <%= link_to "Buy Book", buy_path(@book.id), method: :post %>
  <% end %>
</section>

<!-- Add link to own book if user logged in -->

<hr>

<section>
  <h3> Users who own this book </h3>
  <% @book.users.each do |user| %>
    <h4><%= link_to user.username, user_path(user.id) %></h4>
  <% end %>
<section>
